{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "${content_version}",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2022-06-01-preview",
            "name": "${name}",
            "location": "${location}",
            "properties": {
                "configuration": {
                    "ingress": {
                        "external": true,
                        "targetPort": 8080,
                        "transport": "Http"
                    },
                    "secrets": [
                        {
                            "name": "redis-connection-string",
                            "value": "${redis_connection_string}"
                        }
                    ]
                },
                "managedEnvironmentId": "${managed_environment_id}",
                "template": {
                    "containers": [
                        {
                            "env": [
								{
                            		"name": "TZ",
                            		"value": "Europe/Rome"
                            	},
                                {
                                    "name": "auth.quarkus-log-level",
                                    "value": "${quarkus_log_level}"
                                },
                                {
                                    "name": "auth.app-log-level",
                                    "value": "${app_log_level}"
                                },
                                {
                                    "name": "auth.cryptoperiod",
                                    "value": "${cryptoperiod}"
                                },
                                {
                                    "name": "auth.keysize",
                                    "value": "${keysize}"
                                },
                                {
                                    "name": "auth.access.duration",
                                    "value": "${access_duration}"
                                },
                                {
                                    "name": "auth.refresh.duration",
                                    "value": "${refresh_duration}"
                                },
                                {
                                    "name": "auth.redis-connection-string",
                                    "secretRef": "redis-connection-string"
                                },
                                {
                                    "name": "auth.data.url",
                                    "value": "${data_url}"
                                },
                                {
                                    "name": "auth.json-logging",
                                    "value": "${json_logging}"
                                }
                            ],
                            "image": "${image}",
                            "name": "mil-auth",
                            "resources": {
                                "cpu": ${cpu},
                                "ephemeralStorage": "${ephemeral_storage}",
                                "memory": "${memory}"
                            }
                        }
                    ],
                    "scale": {
                        "maxReplicas": ${max_replicas},
                        "minReplicas": ${min_replicas}
                    }
                }
            }
        }
    ],
    "outputs": {
        "ingress_fqdn": {
            "type": "String",
            "value": "[reference(resourceId('Microsoft.App/containerApps','${name}')).configuration.ingress.fqdn]"
        } 
    }
}
