{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "${content_version}",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2022-06-01-preview",
            "name": "${name}",
            "location": "${location}",
            "properties": {
                "configuration": {
                    "ingress": {
                        "external": true,
                        "targetPort": 8080,
                        "transport": "Http"
                    },
                    "secrets": [
                        {
                            "name": "gec-subscription-key",
                            "value": "${gec_subscription_key}"
                        },
                        {
                        	"name": "mil-acquirer-conf-subscription-key",
                        	"value": "${mil_acquirer_conf_subscription_key}"
                        }
                    ]
                },
                "managedEnvironmentId": "${managed_environment_id}",
                "template": {
                    "containers": [
                        {
                            "env": [
                            	{
                            		"name": "TZ",
                            		"value": "Europe/Rome"
                            	},
                                {
                                    "name": "feecalculator.quarkus-log-level",
                                    "value": "${quarkus_log_level}"
                                },
                                {
                                    "name": "feecalculator.app-log-level",
                                    "value": "${app_log_level}"
                                },
                                {
                                    "name": "rest-client-fees-url",
                                    "value": "${gec_url}"
                                },
                                {
                                    "name": "ocp-apim-subscription",
                                    "secretRef": "gec-subscription-key"
                                },
                                {
                                    "name": "fees.service.connect-timeout",
                                    "value": "${gec_connect_timeout}"
                                },
                                {
                                    "name": "fees.service.read-timeout",
                                    "value": "${gec_read_timeout}"
                                },
                                {
                                	"name": "mil.rest-service.url",
                                	"value": "${mil_acquirer_conf_url}"
                                },
                                {
                                	"name": "mil.rest-service.connect-timeout",
                                	"value": "${mil_acquirer_conf_connect_timeout}"
                                },
                                {
                                	"name": "mil.rest-service.read-timeout",
                                	"value": "${mil_acquirer_conf_read_timeout}"
                                },
                                {
                                	"name": "mil.rest-service.subscription-key",
                                	"secretRef": "mil-acquirer-conf-subscription-key"
                                },
                                {
                                	"name": "mil.acquirer-conf.version",
                                	"value": "${mil_acquirer_conf_ver}"
                                },
                                {
                                    "name": "jwt-publickey-location",
                                    "value": "${jwt_publickey_location}"
                                }
                            ],
                            "image": "${image}",
                            "name": "mil-fee-calculator",
                            "resources": {
                                "cpu": ${cpu},
                                "ephemeralStorage": "${ephemeral_storage}",
                                "memory": "${memory}"
                            }
                        }
                    ],
                    "scale": {
                        "maxReplicas": ${max_replicas},
                        "minReplicas": ${min_replicas}
                    }
                }
            }
        }
    ],
    "outputs": {
        "ingress_fqdn": {
            "type": "String",
            "value": "[reference(resourceId('Microsoft.App/containerApps','${name}')).configuration.ingress.fqdn]"
        } 
    }
}
