{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "${content_version}",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2022-06-01-preview",
            "name": "${name}",
            "location": "${location}",
            "properties": {
                "configuration": {
                    "ingress": {
                        "external": true,
                        "targetPort": 8080,
                        "transport": "Http"
                    },
                    "secrets": [
                        {
                            "name": "mongo-connection-string-secret-1",
                            "value": "${mongo_connection_string_1}"
                        },
                        {
                            "name": "mongo-connection-string-secret-2",
                            "value": "${mongo_connection_string_2}"
                        },
                        {
                            "name": "kafka-connection-string-1",
                            "value": "${kafka_connection_string_1}"
                        },
                        {
                            "name": "kafka-connection-string-2",
                            "value": "${kafka_connection_string_2}"
                        }
                    ]
                },
                "managedEnvironmentId": "${managed_environment_id}",
                "template": {
                    "containers": [
                        {
                            "env": [
                            	{
                            		"name": "TZ",
                            		"value": "Europe/Rome"
                            	},
                                {
                                    "name": "preset.quarkus-log-level",
                                    "value": "${quarkus_log_level}"
                                },
                                {
                                    "name": "preset.app-log-level",
                                    "value": "${app_log_level}"
                                },
                                {
                                    "name": "mongo-connect-timeout",
                                    "value": "${mongo_connect_timeout}"
                                },
                                {
                                    "name": "mongo-read-timeout",
                                    "value": "${mongo_read_timeout}"
                                },
                                {
                                    "name": "mongo-server-selection-timeout",
                                    "value": "${mongo_server_selection_timeout}"
                                },
                                {
                                    "name": "mongo-connection-string-1",
                                    "secretRef": "mongo-connection-string-secret-1"
                                },
                                {
                                    "name": "mongo-connection-string-2",
                                    "secretRef": "mongo-connection-string-secret-2"
                                },
                                {
                                    "name": "kafka-connection-string-1",
                                    "secretRef": "kafka-connection-string-1"
                                },
                                {
                                    "name": "kafka-connection-string-2",
                                    "secretRef": "kafka-connection-string-2"
                                },
                                {
                                    "name": "preset.location.base-url",
                                    "value": "${preset_location_base_url}"
                                },
                                {
                                    "name": "kafka-bootstrap-server",
                                    "value": "${eventhub_namespace}.servicebus.windows.net:9093"
                                }
                            ],
                            "image": "${image}",
                            "name": "mil-preset",
                            "resources": {
                                "cpu": ${cpu},
                                "ephemeralStorage": "${ephemeral_storage}",
                                "memory": "${memory}"
                            }
                        }
                    ],
                    "scale": {
                        "maxReplicas": ${max_replicas},
                        "minReplicas": ${min_replicas}
                    }
                }
            }
        }
    ],
    "outputs": {
        "ingress_fqdn": {
            "type": "String",
            "value": "[reference(resourceId('Microsoft.App/containerApps','${name}')).configuration.ingress.fqdn]"
        } 
    }
}
