{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2022-06-01-preview",
            "name": "${name}",
            "location": "${location}",
            "properties": {
                "configuration": {
                    "ingress": {
                        "external": true,
                        "targetPort": 8080,
                        "transport": "Http"
                    },
                    "secrets": [
                        {
                            "name": "mongo-connection-string-secret-1",
                            "value": "${mongo_connection_string_1}"
                        },
                        {
                            "name": "mongo-connection-string-secret-2",
                            "value": "${mongo_connection_string_2}"
                        },
                        {
                            "name": "redis-connection-string",
                            "value": "rediss://:${redis_primary_access_key}@${redis_hostname}:${redis_ssl_port}"
                        },
                        {
                            "name": "node-soap-subscription-key",
                            "value": "${node_soap_subscription_key}"
                        },
                        {
                            "name": "node-rest-subscription-key",
                            "value": "${node_rest_subscription_key}"
                        }
                    ]
                },
                "managedEnvironmentId": "${managed_environment_id}",
                "template": {
                    "containers": [
                        {
                            "env": [
                                {
                                    "name": "paymentnotice.quarkus-log-level",
                                    "value": "${quarkus_log_level}"
                                },
                                {
                                    "name": "paymentnotice.app-log-level",
                                    "value": "${app_log_level}"
                                },
                                {
                                    "name": "mongo-connect-timeout",
                                    "value": "${mongo_connect_timeout}"
                                },
                                {
                                    "name": "mongo-read-timeout",
                                    "value": "${mongo_read_timeout}"
                                },
                                {
                                    "name": "mongo-server-selection-timeout",
                                    "value": "${mongo_server_selection_timeout}"
                                },
                                {
                                    "name": "node.soap-service.url",
                                    "value": "${node_soap_service_url}"
                                },
                                {
                                    "name": "node.soap-client.connect-timeout",
                                    "value": "${node_soap_client_connect_timeout}"
                                },
                                {
                                    "name": "node.soap-client.read-timeout",
                                    "value": "${node_soap_client_read_timeout}"
                                },
                                {
                                    "name": "node.soap-client.apim-subscription-key",
                                    "secretRef": "node-soap-subscription-key"
                                },
                                {
                                    "name": "node.rest-service.url",
                                    "value": "${node_rest_service_url}"
                                },
                                {
                                    "name": "node-rest-client-subscription-key",
                                    "secretRef": "node-rest-subscription-key"
                                },
                                {
                                    "name": "paymentnotice.rest-client.connect-timeout",
                                    "value": "${rest_client_connect_timeout}"
                                },
                                {
                                    "name": "paymentnotice.rest-client.read-timeout",
                                    "value": "${rest_client_read_timeout}"
                                },
                                {
                                    "name": "paymentnotice.closepayment.max-retry",
                                    "value": "${close_payment_max_retry}"
                                },
                                {
                                    "name": "paymentnotice.closepayment.retry-after",
                                    "value": "${closepayment_retry_after}"
                                },
                                {
                                    "name": "paymentnotice.activatepayment.expiration-time",
                                    "value": "${activatepayment_expiration_time}"
                                },
                                {
                                    "name": "mongo-connection-string-1",
                                    "secretRef": "mongo-connection-string-secret-1"
                                },
                                {
                                    "name": "mongo-connection-string-2",
                                    "secretRef": "mongo-connection-string-secret-2"
                                },
                                {
                                    "name": "redis-connection-string",
                                    "secretRef": "redis-connection-string"
                                }
                            ],
                            "image": "${image}",
                            "name": "mil-payment-notice",
                            "resources": {
                                "cpu": ${cpu},
                                "ephemeralStorage": "${ephemeral_storage}",
                                "memory": "${memory}"
                            }
                        }
                    ],
                    "scale": {
                        "maxReplicas": ${max_replicas},
                        "minReplicas": ${min_replicas}
                    }
                }
            }
        }
    ],
    "outputs": {
        "ingress_fqdn": {
            "type": "String",
            "value": "[reference(resourceId('Microsoft.App/containerApps','${name}')).configuration.ingress.fqdn]"
        } 
    }
}
